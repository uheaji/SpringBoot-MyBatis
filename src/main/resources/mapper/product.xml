<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.cos.mybatisex01.repository.ProductRepository">
	<insert id="save">
	INSERT INTO product(name, code) VALUES(#{name}, #{code})
	</insert>
	
	<update id="update">
		UPDATE product SET name=#{name}, code=#{code} WHERE id=#{id}
	</update>
	
	<delete id="deleteById">DELETE from product where id = #{id}</delete>
	
	<select id="findAll" resultType="com.cos.mybatisex01.model.Product">SELECT * FROM product</select>
	
	<select id="findById" resultType="com.cos.mybatisex01.model.Product">SELECT * FROM product WHERE id=#{id}</select>
</mapper>